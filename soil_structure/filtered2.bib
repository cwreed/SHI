}

@Article{ISI:000071646800017,
  author = {PP Motavalli and J McConnell},
  title = {{Land use and soil nitrogen status in a tropical Pacific island
   environment}},
  journal = {{JOURNAL OF ENVIRONMENTAL QUALITY}},
  year = {{1998}},
  volume = {{27}},
  number = {{1}},
  pages = {{119-123}},
  month = {{JAN-FEB}},
  abstract = {{The rapid rate of land development in the Micronesian Region of the
   Pacific Ocean has raised public concern over the effects of land
   disturbance and land use on potential NO3- pollution and other long-term
   impacts on soil properties, Our objective was to compare the soil N
   status and other soil chemical and physical properties of several land
   use sites on Guam, including an area under secondary forest vegetation,
   an area under continuous cultivation, an area recently cleared for
   agriculture, and an abandoned agricultural area. Continuous agricultural
   cultivation over a 7-yr period increased soil bulk density and soil pH
   and lowered water-holding capacity, organic C, total N, and N
   mineralization compared with soil in a forested site. Soil organic N
   fractions, including microbial biomass N and particulate organic matter
   N, were reduced by the mixing effects of tillage in the cultivated site.
   Initial clearing of vegetation increased hulk density and pH but did not
   decrease soil organic C and N compared with the forest site. Soil at an
   agricultural site that had been abandoned for an Il-Jr period did not
   return to levels of organic C, total N, and N mineralization observed in
   the forest and cleared sites. These results suggest that long-term
   tillage has a significant impact on soil properties in this tropical
   island environment, including reducing active and stable N pools.
   However, the significance of these changes on NO3- leaching is unclear
   because of alterations in soil properties affecting both soil water
   movement and other N processes.}},
  doi = {{10.2134/jeq1998.00472425002700010017x}},
  issn = {{0047-2425}},
  unique-id = {{ISI:000071646800017}},
}

@Article{ISI:A1997YH88000006,
  author = {L Cox and R Celis and MC Hermosin and A Becker and J Cornejo},
  title = {{Porosity and herbicide leaching in soils amended with olive-mill
   wastewater}},
