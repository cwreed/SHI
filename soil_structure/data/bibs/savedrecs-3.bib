@article{ ISI:000312686200016,
Author = {Berber, Mohamed R. and Hafez, Inas H. and Minagawa, Keiji and Tanaka,
   Masami and Mori, Takeshi},
Title = {{An efficient strategy of managing irrigation water based on formulating
   highly absorbent polymer-inorganic clay composites}},
Journal = {{JOURNAL OF HYDROLOGY}},
Year = {{2012}},
Volume = {{470}},
Pages = {{193-200}},
Month = {{NOV 12}},
Abstract = {{The management of irrigation water presents a great challenge for the
   agriculture field. In view of increasing soil water-holding capacity and
   increasing water-use efficiency, an efficient strategy of managing
   irrigation water based on formulating highly absorbent polymer-inorganic
   clay composite (polyacrylic acid-layered double hydroxide: PAA-LDH) was
   offered. The PAA-LDH composite was synthesized by an incorporation/in
   situ polymerization technique. Scanning electron microscopy, X-ray
   analysis and infrared spectroscopy were used to confirm the composite
   structure. The thermal gravimetric analysis was applied to investigate
   the polymer thermal stability after the composite formation. The
   irrigation experiments were conducted in a wooden soil box with a
   transparent plexiglas side by using a subsurface drip irrigation system.
