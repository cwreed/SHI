@article{ ISI:000398705300015,
Author = {Ali, Shamsher and Hayat, Rifat and Begum, Farida and Bohannan, Brendan
   James Marc and Inebert, Lucas and Meyer, Kyle},
Title = {{Variation in Soil Physical, Chemical and Microbial Parameters under
   Different Land uses in Bagrot Valley, Gilgit, Pakistan}},
