@article{ ISI:000333801200002,
Author = {Hentati, Olfa and Chaker, Sana and Wali, Ahmed and Ayoub, Tarek and
   Ksibi, Mohamed},
Title = {{Effects of long-term irrigation with treated wastewater on soil quality,
   soil-borne pathogens, and living organisms: case study of the vicinity
   of El Hajeb (Tunisia)}},
Journal = {{ENVIRONMENTAL MONITORING AND ASSESSMENT}},
Year = {{2014}},
Volume = {{186}},
Number = {{5}},
Pages = {{2671-2683}},
Month = {{MAY}},
Abstract = {{Medium (i.e. 15 years) and long-term (i.e. 20 years) impact of
   irrigation using secondary-treated municipal wastewater (TWW) was
   assessed on two agricultural soil samples, denoted by E and G,
   respectively, in the vicinity of El Hajeb region (Southern Tunisia).
