EISSN = {{1573-5036}},
ResearcherID-Numbers = {{Kammann, Claudia/B-1533-2013
   Goessling, Johannes/E-1162-2016}},
ORCID-Numbers = {{Goessling, Johannes/0000-0003-4877-3734}},
Unique-ID = {{ISI:000292999700015}},
