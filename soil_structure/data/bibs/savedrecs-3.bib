@article{ ISI:000367456900017,
Author = {Kaur, Rajinder and Goyal, Dinesh},
Title = {{Mineralogical comparison of coal fly ash with soil for use in
   agriculture}},
Journal = {{JOURNAL OF MATERIAL CYCLES AND WASTE MANAGEMENT}},
