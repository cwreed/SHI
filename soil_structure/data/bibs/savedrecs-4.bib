Unique-ID = {{ISI:000280986600015}},
}

@article{ ISI:000281524300002,
Author = {Kautz, Timo and Stumm, Christoph and Kosters, Raimund and Koepke, Ulrich},
Title = {{Effects of perennial fodder crops on soil structure in agricultural
   headlands}},
