@article{ ISI:A1995RX31400005,
Author = {HE, ZL and WILSON, MJ and CAMPBELL, CO and EDWARDS, AC and CHAPMAN, SJ},
Title = {{DISTRIBUTION OF PHOSPHORUS IN SOIL AGGREGATE FRACTIONS AND ITS
   SIGNIFICANCE WITH REGARD TO PHOSPHORUS TRANSPORT IN AGRICULTURAL RUNOFF}},
Journal = {{WATER AIR AND SOIL POLLUTION}},
Year = {{1995}},
Volume = {{83}},
Number = {{1-2}},
Pages = {{69-84}},
Month = {{JUL}},
Abstract = {{Surface runoff is the major way of P transport from agricultural land to
   surface waters. To assess the potential of P loss in runoff in relation
   to soil P status, the chemical nature and distribution of soil P in
   different size classes of water-stable aggregates were quantified for
   two distinctive soil types. For both soils unfertilized areas under
   pasture and well-fertilized arable soils were sampled. The content of
   total P, organic P and microbial biomass P (P-mic) decreased in the
